package com.example.board2.util;

import org.springframework.stereotype.Service;

@Service
public class MyUtil {
	//
	public int getPageCount(int numPerPage, int dataCount){
		int pageCount = 0;
		pageCount = dataCount / numPerPage;
		
		if(dataCount % numPerPage !=0) {
			pageCount++;
		}
		return pageCount;
	}
	
	public String pageIndexList(int currentPage, int totalPage, String listUrl) {
		StringBuffer sb = new StringBuffer(); //문자별 데이터를 자주 추가하하거나 삭제할때 메모리 낭비의 방지
		int numPerBlock = 5; // ◀이전 6 7 8 9 10 다음▶ 이전과 다음 사이의 숫자를 몇개를 표시할지
		int currentPageSetup; //◀이전 버튼에 들어갈 값
		int page; //(일반적인) 페이지에 들어갈 값
		
		return sb.toString();
	}
}
